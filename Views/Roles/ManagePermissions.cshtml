<div class="card">
    <div id="viewAll" class="card-body table-responsive">
        <form asp-controller="permission" method="post" asp-action="Update" class="d-inline">
            <input asp-for="@Model.RoleId" type="hidden" />
            <table class="table table-striped" id="permissionTable">
                <thead>
                    <tr>
                        <th>
                            ModuleName
                        </th>
                        <th>
                            Create
                        </th>
                        <th>
                            View
                        </th>
                        <th>
                            Edit
                        </th>
                        <th>
                            Delete
                        </th>
                        @*<th>
                            Status
                        </th>*@
                    </tr>
                </thead>
                <tbody>

                    @for (int i = 0; i < Model.RoleClaims.Count(); i++)
                    {
                    <tr>
                        <td>
                            @*<input asp-for="@Model.RoleClaims[i].ModuleName" type="hidden" />*@
                            @Model.RoleClaims[i].ModuleName
                        </td>
                        <td>                           
                            <div class="form-check m-1">
                                <input asp-for="@Model.RoleClaims[i].CreateValue" type="hidden" />
                                <input asp-for="@Model.RoleClaims[i].Create" class="form-check-input" />
                            </div>
                        </td>
                        <td>                           
                            <div class="form-check m-1">
                                <input asp-for="@Model.RoleClaims[i].ViewValue" type="hidden" />
                                <input asp-for="@Model.RoleClaims[i].View" class="form-check-input" />
                            </div>
                        </td>
                        <td>                            
                            <div class="form-check m-1">
                                <input asp-for="@Model.RoleClaims[i].EditValue" type="hidden" />
                                <input asp-for="@Model.RoleClaims[i].Edit" class="form-check-input" />
                            </div>
                        </td>
                        <td>                         
                            <div class="form-check m-1">
                                <input asp-for="@Model.RoleClaims[i].DeleteValue" type="hidden" />
                                <input asp-for="@Model.RoleClaims[i].Delete" class="form-check-input" />
                            </div>
                        </td>
                        @*<td>
                            <div class="form-check m-1">
                                <input asp-for="@Model.RoleClaims[i].Selected" class="form-check-input" />
                            </div>
                        </td>*@
                    </tr>
                    }
                </tbody>
            </table>

            <div class="col-sm-12" style="padding: 20px 20px 0px 0px">
                <button type="submit" id="save" class="btn btn-success">
                    <i class="fa fa-check"></i>
                    Save
                </button>
            </div>
        </form>
    </div>
</div>
